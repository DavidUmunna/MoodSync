# MoodSync Backend Environment Variables
# Copy this file to .env and update the values

# Application
NODE_ENV=development
DEBUG=True

# Database Configuration
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://moodsyncAdmin:Halden101@localhost:5432/moodsync

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password  # Uncomment if Redis has auth

# JWT / Authentication
JWT_SECRET="pedro123456789moodsyncsecretkey"
JWT_ALGORITHM=HS256
ACCESS_TOKEN_TTL_MINUTES=15
REFRESH_TOKEN_TTL_DAYS=14

# Rate Limiting
RATE_LIMIT_WINDOW_SECONDS=1800  # 30 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Logging
LOG_LEVEL=INFO